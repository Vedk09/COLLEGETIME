        <div class="container">
            <% for (var i = 0 ; i < 1 ; i++) {%>
              <div class="bcontent responsive" style="margin-top:50px;margin-bottom:50px;">
        <div class="card" style="width: 1065px; height:500px;">
            <div class="row no-gutters">
              <div class="col-sm-5" style="padding-top:50px;padding-left:30px;">
                  <div class="card-body">
                      <h2 class="card-title" style="text-transform:capitalize;font-size:35px;margin-bottom:20px;"><%=posts[i].title.substring(0,60)%></h2>
                      <p class="card-text" style="color:black;"><%-posts[i].description.substring(0,300)%></p>
                      <div class="button1" style="margin-left:200px;">
                        <a href="/blogs/<%=posts[i].slug%>">
                        <p class="content-button1" style="text-align:right;width:140px;font-size:18px;text-decoration:none;">Read more</p>
                      </a>
                    </div>
                      <div class="daefooter" style="margin-bottom:20px;">
                        <ul id="daelist">
                          <li><p id="dae" style="margin-left:-20px;"><%=posts[i].creationDate%></p></li>
                        </ul>
                      </div>
                      <div class="daefooter2" style="margin-bottom:20px;">
                        <ul id="daelist">
                          <li><p id="daeaut" style="text-align:right;"><%=posts[i].author?.author%></p></li>
                        </ul>
                      </div>
                  </div>
              </div>
                <div class="col-sm-7" style="padding:50px;">
                    <img class="card-img" src="<%=posts[i].file%>" height=400px alt="">
                </div>
            </div>
        </div>
    </div>
